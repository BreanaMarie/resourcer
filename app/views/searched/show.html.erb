
<!-- condition showing of profile -->
  <!-- if profile belongs to a candidate,  -->
  <section>
    <div class="container compress">
      <div class="row">
        <div id="profileside" class="col-xs-4 center profile-image">
            <%= image_tag @profile.image, class:"profile-image" %>
          <!-- <p><%= "#{@profile.firstname} #{@profile.lastname}"  %></p> -->
          <!-- <p><%= "Joined on #{@profile.created_at.to_date.to_formatted_s(:long_ordinal)}" %></p> -->
          <!-- Show request friendship if on another users page otherwise show edit profile button -->
          <!-- <% if session[:user_id] != @profile.user.id %>
            <%= link_to "Add Friend", friendships_path(:friend_id => @profile.user.id), :method => :post, class:"btn" %> -->
          <!-- TODO if user is already friends alert already friends  -->
          <!-- if user is not firends offer creation of friendship -->
          <!-- <%else%>
           <%= button_to "Edit Profile", edit_profile_path, class:"btn btn-default", method: :get %>
          <%end%> -->
        </div>
        <div class="col-xs-6 left name-title">
          <% if @profile.full_name.blank? %>
          <h2>Please update profile</h2>
          <%else%>
          <h3 class="name"><%= "#{@profile.full_name}"%></h3>
          <h3 class="title"><%= "#{@profile.role}" %></h3>
          <%end%>
        </div>
      <div class="col-xs-2 center add-friend">
        <% if session[:user_id] != @profile.user.id %>
          <%= link_to "Add Friend", friendships_path(:friend_id => @profile.user.id), :method => :post, class:"btn btn-danger " %>
        <!-- TODO if user is already friends alert already friends  -->
        <!-- if user is not firends offer creation of friendship -->
        <%else%>
         <%= button_to "Edit Profile", edit_profile_path, class:"btn btn-default", method: :get %>
        <%end%>
      </div>
    </div><!-- end row -->
    <div class="row">
      <div class="col-xs-12 location">
        <h4>
          <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>
          <%= "#{@profile.city} #{","} #{@profile.state}" %>
        </h4>
      </div>
    </div><!-- end row -->
    <div class="row">
      <div class="col-xs-12">
        <h3>Bio</h3>
      </div>
    </div><!-- end row -->
      <div class="row">
        <div class="col-xs-12 employments indent">
          <p class="e"><%=@profile.bio%></p>
        </div>
      </div><!-- end row -->
      <div class="row ">
        <div class="col-xs-12">
          <h3>Employment History</h3>
        </div>
      </div><!-- end row -->
      <div class="row">
        <% @profile.employments.each do |e| %>
        <div class="col-xs-3 employments industry">
          <div class="indent">
            <%= link_to employment_path(e) do%>
            <%=e.industry %><br>
            <%=e.title%>
            <% end %>
          </div>
        </div>
        <div class="col-xs-3 employments industry">
          <%= link_to employment_path(e) do%>
          <span class="glyphicon glyphicon-map-marker" id="location-history" aria-hidden="true"></span>
          <%=e.city%>, <%= e.state %>
          <% end %>
        </div>
        <div class="col-xs-6 employments">
          <%= link_to employment_path(e) do%>
          <%=e.summary%>
          <% end %>
        </div>
        <%end%>
      </div>
    </div>
  </section>
