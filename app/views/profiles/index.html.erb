      </div>
      <div class="col-xs-8">
        <div id="profiles"><%= render 'profiles' %></div>
        <table class="table thumbnail" width:"100%">
          <tr>
            <th></th>
            <th><%= sortable 'firstname' %></th>
            <th><%= sortable 'lastname' %></th>
            <th><%= sortable 'city' %></th>
            <th><%= sortable 'role' %></th>
          </tr>
          <% for profile in @profiles %>
            <tr>
              <td>
                <%= link_to profile_path(profile) do%>
                <img src="<%=profile.image %>">
                <% end %>
              </td>
              <td>
                <%= link_to profile_path(profile) do%>
                <%=profile.firstname%>
                <% end %> 
              </td>
              <td>
                <%= link_to profile_path(profile) do%>
                <%=profile.lastname%>
                <% end %> 
              </td>
              <td>
                <%= link_to profile_path(profile) do%>
                <%=profile.city%>
                <% end %>
              </td>
              <td>
                <%= link_to profile_path(profile) do%>
                <%=profile.role%>
                <% end %>
              </td>
            </tr >
          <%end%>
        </table>
        <%= will_paginate @profiles %>
        
      </div>
      
    </div>

    
  </div>
