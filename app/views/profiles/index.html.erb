<section>
  <div class="container-fixed compress">
    <div class="row">
      <div class="col-xs-4 searchnav">
        <h4>Search by Keyword</h4>
        <%= form_tag profiles_path, :method => 'get', :id => "profiles_search" do %>
          <%= hidden_field_tag :direction, params[:direction] %>
          <%= hidden_field_tag :sort, params[:sort] %>

          <p>
            <%= text_field_tag :search, params[:search], placeholder: "Search Profiles", class: "form-group" %>
          </p>
          <%= submit_tag "Search", :name => nil, class: "btn btn-primary" %>

        <% end %>
      </div>

      <!-- if current user is a candidate -->
      <div class="col-xs-8">
        <div id="profiles"><%= render 'profiles' %></div>
              <% if current_user.profile.seeker == 'candidate' %>
              <div class="container-fixed">
                <% for profile in @profiles.where(seeker: "sourcer") %>
                  <div class="row result center">

                    <div class="col-xs-4 result-info">
                      <%= link_to searched_path(profile) do%>
                      <img src="<%=profile.image %>">
                      <% end %>
                    </div><!-- end column -->

                    <div class="col-xs-4 result-info">
                      <div class="result-detail left" id="name">
                        <%= link_to searched_path(profile) do%>
                        <%=profile.firstname%>
                        <% end %>
                        <%= link_to searched_path(profile) do%>
                        <%=profile.lastname%>
                        <% end %>
                      </div>

                      <div class="result-detail left" id="role">
                        <%= link_to searched_path(profile) do%>
                        <%=profile.role%>
                        <% end %>
                      </div>

                      <div class="result-detail left" id="city">
                        <%= link_to searched_path(profile) do%>
                        <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>
                        <%=profile.city%>
                        <% end %>
                      </div>
                    </div><!-- end column -->

                    <div class="col-xs-4 result-info">
                      <%= link_to "Connect", friendships_path(:friend_id => @profile.user), :method => :post, class:"btn btn-primary search" %>
                      <br>
                      <%= link_to "View Profile", searched_path(profile), class:"btn btn-danger search" %>
                    </div><!-- end column -->
                  </div><!-- end row -->
                  <%end%>
              </div>

              <!-- if current user is a sourcer -->
              <% elsif current_user.profile.seeker == 'sourcer' %>
              <div class="container-fixed">
                <% for profile in @profiles.where(seeker: "sourcer") %>
                  <div class="row result center">
                    <div class="col-xs-4 result-info">
                      <%= link_to searched_path(profile) do%>
                      <img src="<%=profile.image %>">
                      <% end %>
                    </div><!-- end row -->

                    <div class="col-xs-4 result-info">
                      <div class="result-detail left" id="name">
                        <%= link_to searched_path(profile) do%>
                        <%=profile.firstname%>
                        <% end %>

                        <%= link_to searched_path(profile) do%>
                        <%=profile.lastname%>
                        <% end %>
                      </div>

                      <div class="result-detail left" id="role">
                        <%= link_to searched_path(profile) do%>
                        <%=profile.role%>
                        <% end %>
                      </div>

                      <div class="result-detail left" id="city">
                        <%= link_to searched_path(profile) do%>
                        <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>
                        <%=profile.city%>
                        <% end %>
                      </div>
                    </div><!-- end column -->

                    <div class="col-xs-4 result-info">
                      <%= link_to "Connect", friendships_path(:friend_id => @profile.user), :method => :post, class:"btn btn-primary search" %>
                      <br>
                      <%= link_to "View Profile", searched_path(profile), class:"btn btn-danger search" %>
                    </div>
                  </div><!-- end row -->
                  <%end%>
              </div>
            <% end %>
            <%= will_paginate @profiles %>
      </div> <!-- end col-xs-8 -->
    </div>
  </div>
</section>
