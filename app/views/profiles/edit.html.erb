<!-- if current user is a candidate -->
<% if current_user.profile.seeker == 'candidate' %>
<section>
  <div class="container compress">
    <div class="row">
      <div class="col-xs-12">
        <h1 class="center">Edit Candidate Profile</h1>
      </div>
    </div>
    <div class="row push-down">
      <div class="col-xs-4 center">
          <% if current_user.profile.seeker == 'candidate' ||  current_user.profile.seeker == 'sourcer'%>
          <%= image_tag @profile.image, class:"profile-image", id:"edit-image" %>
          <%else%>
          <img class="welcome-icon" src="<%= asset_path( 'placeholder-user-photo.png' ) %>" alt="Users icon" width="100px" height="100px"/>
          <h6>Please update your profile image.</h6>
          <%end%>
          <%= form_for @profile do |p| %>
          <%= p.label "Image url" %>
          <%= p.text_field :image, placeholder: "Find a picture you like, right click and hit copy image url", class:'form-control'%>
          <br>
      </div>
      <div class="col-xs-8 center seeker">
        <h4><%= p.label "Status" %></h4>
        <p>Candidate     <%= p.radio_button :seeker, "candidate", :value => "candidate" %></p>
        <p>Sourcer     <%= p.radio_button :seeker, "sourcer", :value => "sourcer" %>
        <br></p>
    </div><!-- end row -->
  </div>
  <div class="row"> <!-- start remaining form fields -->
      <div class="col-xs-4">
        <%= p.label "First name" %>
        <%= p.text_field :firstname, placeholder: "First Name", class:'form-control', autofocus: true %>
        <br>
      </div>
      <div class="col-xs-4">
        <%= p.label "Last name" %>
        <%= p.text_field :lastname, placeholder: "Last Name", class:'form-control' %>
        <br>
      </div>
      <div class="col-xs-4">
        <%= p.label "Linkedin" %>
        <%= p.text_field :linkedin, placeholder: "url to your linked in profile", class:'form-control' %>
        <br>
      </div>
  </div><!-- end row -->
  <div class="row"> <!-- start remaining form fields -->
    <div class="col-xs-4">
        <%= p.label "Desired role" %>
        <%= p.text_field :role, placeholder: "Your Role desired/job title", class:'form-control'%>
        <br>
    </div>
    <div class="col-xs-4">
        <%= p.label "City" %>
        <%= p.text_field :city, placeholder: "City", class:'form-control'%>
        <br>
    </div>
    <div class="col-xs-4">
        <%= p.label "State" %>
        <%= p.text_field :state, placeholder: "State", class:'form-control' %>
        <br>
      </div>
    </div><!-- end row -->
  <div class="row">
    <div class="col-xs-12">
        <%= p.label "Bio" %>
        <%= p.text_area :bio, placeholder: "Short Bio about yourself", class:'form-control' %>
        <br>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
        <%= p.label "Skills" %>
        <%= p.text_area :skills, placeholder: "list or describe your skill sets", class:'form-control' %>
        <br>
    </div>
  </div>
  <div class="row rig">
    <div class="col-xs-6 left">
      <%= link_to "Cancel", profile_path, class: 'btn btn-cancel' %>
    </div>
    <div class="col-xs-6 right">
      <%= p.submit "Update", class: 'btn btn-primary' %>
    </div>
    <% end %>
  </div>
  </div>
</section>

<!-- if current user is a sourcer -->
