        <br>
      </div>
      <div class="col-xs-4">
          <%= p.label "City" %>
          <%= p.text_field :city, placeholder: "City", class:'form-control'%>
          <br>
      </div>
  </div><!-- end row -->
  <div class="row"> <!-- start remaining form fields -->
    <div class="col-xs-8">
      <%= p.label "Current Job Title" %>
      <%= p.text_field :role, placeholder: "Your Current Job Title", class:'form-control'%>
      <br>
    </div>
    <div class="col-xs-4">
        <%= p.label "State" %>
        <%= p.text_field :state, placeholder: "State", class:'form-control' %>
        <br>
    </div>
  </div><!-- end row -->

  <div class="row"> 
    <div class="col-xs-8">
      <%= p.label "Current Company" %>
      <%= p.text_field :company, placeholder: "The Name of your Current Employer", class:'form-control'%>
      <br>
    </div>
    <div class="col-xs-4">
        <%= p.label "Department" %>
        <%= p.select :department, ['Sales', 'HR/Talent', 'Acquisition', 'Engineering/Development', 'Operations', 'Product Design', 'Marketing', 'Finance/Accounting'], include_blank: true, :class => 'drop' %>
        <br>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
        <%= p.label "Ideal Candidate" %>
        <%= p.text_area :bio, placeholder: "This should describe the ideal candidate, including skills", class:'form-control' %>
        <br>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-4">
      <%= p.label "Linkedin" %>
      <%= p.text_field :linkedin, placeholder: "url to your linked in profile", class:'form-control' %>
      <br>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 left">
      <%= link_to "Cancel", profile_path, class: 'btn btn-cancel' %>
    </div>
    <div class="col-xs-6 right">
      <%= p.submit "Update", class: 'btn btn-primary' %>
    </div>
    <% end %>
  </div>
  </div>
</section>

<!-- if current user has not identified as a sourcer or candidate -->
<% else %>
<section>
  <div class="container">
    <div class="row">
      <div class="col-xs-12"></div>
      <h1 class="center seeker-new">Seeker Status &#38; Basic Info</h1>
    </div>
    <div class="row seeker-new">
      <div class="col-xs-6">
        <%= form_for @profile do |p| %>
        <h3 class="question"><%= p.label "what type of seeker are you?" %></h3>
        <h3>Candidate  <%= p.radio_button :seeker, "candidate", :value => "candidate" %></h3>
        <h3>Sourcer   <%= p.radio_button :seeker, "sourcer", :value => "sourcer" %></h3>
        <br></p>
      </div><!-- end row -->
      <div class="col-xs-6"> <!-- start remaining form fields -->
        <div class="text-right">
          <%= p.submit "Add to Profile", class: 'btn btn-danger add-seeker-status' %>
        </div>
      </div>
    </div>
    <div class="row seeker-new basic">
      <div class="col-xs-6">
        <%= p.label "First name" %>
        <%= p.text_field :firstname, placeholder: "First Name", :required => true, class:'form-control', autofocus: true %>
      </div><!-- end row -->
      <div class="col-xs-6"> <!-- start remaining form fields -->
        <%= p.label "Last name" %>
        <%= p.text_field :lastname, placeholder: "Last Name", :required => true, class:'form-control' %>
      </div>
    </div>
    <div class="row seeker-new basic">
      <div class="col-xs-6">
        <%= p.label "City" %>
        <%= p.text_field :city, placeholder: "City", :required => true, class:'form-control'%>
      </div><!-- end row -->
      <div class="col-xs-6"> <!-- start remaining form fields -->
        <%= p.label "State" %>
        <%= p.text_field :state, placeholder: "State", :required => true, class:'form-control'%>
      </div>
    </div>
  </div>
<% end %>
</section>
<% end %>
