<section>
  <div class="container">
    <div class="row">
      <div id="profileside" class="col-xs-4">
        <div id="profileimage">
          <img src="<%=@profile.image %>">
        </div>
        <p><%= "#{@profile.firstname} #{@profile.lastname}"  %></p>
        <%= button_to "Edit Profile", edit_profile_path, class:"btn btn-default", method: :get %> 
        
      </div>
      <div class="col-xs-8">
        <h2>Your Dashboard</h2>
        <p><%=@profile.bio%></p>
        
      </div>

      
    </div>
    
  </div>
</section>
